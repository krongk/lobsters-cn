<ol class="stories list">
	<%= render :partial => "stories/listdetail", :collection => @stories,
    :as => :story %>
</ol>

<div class="morelink">
  <% if @page && @page > 1 %>
    <a href="<%= @tag ? "/t/#{@tag.tag}" : (@newest ? "/newest" +
      (@for_user ? "/#{@for_user}" : "") : "") %><%= @page == 2 ? "/" :
      "/page/#{@page - 1}" %>">&lt;&lt; 分页 <%= @page - 1 %></a>
  <% end %>

  <% if @show_more %>
    <% if @page && @page > 1 %>
      |
    <% end %>
    <a href="<%= @tag ? "/t/#{@tag.tag}" : (@newest ? "/newest" +
      (@for_user ? "/#{@for_user}" : "") : "") %>/page/<%= @page + 1 %>">分页
      <%= @page + 1 %> &gt;&gt;</a>
  <% end %>
</div>
