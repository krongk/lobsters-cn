<div class="box wide">
  <div class="legend">
    会员登录
  </div>

  <%= form_tag login_url do %>
  <p>
    <%= label_tag :email, "用户名或E-mail:" %>
    <%= text_field_tag :email, "", :size => 30, :autofocus => "autofocus" %>
    <br />

    <%= label_tag :password, "密码:" %>
    <%= password_field_tag :password, "", :size => 30 %>
    <br />
    </p>

    <p>
    <%= submit_tag "登 录" %>
    </p>

    <p>
    忘记了密码? <%= link_to "点击这里重置密码",
      forgot_password_url %>.
    </p>

  <% end %>
</div>

